<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about.AboutActivity">

    <TextView
        android:id="@+id/textQuran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="قرآن اندروید"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textNevisandeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuran"
        android:layout_alignParentRight="true"
        android:padding="30dp"
        android:text="نویسنده:"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textnevisandeh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textQuran"
        android:layout_toLeftOf="@id/textNevisandeh"
        android:padding="30dp"
        android:text="علیرضا هوشمند"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textViewmailTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textnevisandeh2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="mailtoClick"
        android:text="alireza.houshmand@gmail.com"
        android:textColor="#2196F3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewmailTo"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="نسخه یک"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textVer"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="source=> https://github.com/alirezaHoushmand/myquran"
        android:textSize="15dp"
        android:onClick="goSource"
        />
</RelativeLayout>